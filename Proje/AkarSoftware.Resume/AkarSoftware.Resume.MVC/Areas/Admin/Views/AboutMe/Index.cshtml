@model List<AboutMeListDto>

<h1 class="text-center"> Hakkımda Yazıları </h1>
<br />

<table class="table table-striped table-dark text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Oluşturma T. </th>
            <th scope="col">Güncelleme T. </th>
            <th scope="col">Aktif / Pasif </th>
            <th scope="col">Butonlar </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@(ViewHelpers.StripHtmlTags(item.Description).Length > 200 ? ViewHelpers.StripHtmlTags(item.Description).Substring(0, 200).ToString() + " ... " : ViewHelpers.StripHtmlTags(item.Description))</td>
                    <td>@item.CreatedDate</td>
                    <td>@item.ModifiedDate</td>
                    <td>

                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input"  readonly id="customSwitch1">
                            <label class="custom-control-label" disabled for="customSwitch1"> </label>
                        </div>

                    </td>
                    <td><a asp-area="Admin" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"> Güncelle  </a></td>
                    <td><a class="btn btn-danger"> Sil </a></td>
                </tr>
            }
        }
        else
        {
            <p> Herhangi bir Hakkımda yazısı bulunamadı</p>
        }
    </tbody>






</table>

